@using ShikkhanobishMainWeb.Models
@using Flurl.Http

@page "/"

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>MakeQuestion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Responsive bootstrap 4 admin template" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="~/css/makeQues.css" />
</head>

<body>

    <!-- Begin page -->
  

        
        <!-- Start Page Content here -->
        <!-- ============================================================== -->



            <div class="content">

                <!-- Start container-fluid -->
                <div class="container-fluid">
                    <!--row-->
                    <div class="form-group row">
                        <div class="offset-4">
                            <h3 style="color:cadetblue">Teacher QuestionHistory</h3>
                        </div>

                    </div>
                    <br />
                    <br />

                    <div class="form-group row">
                        <div class="col-5" style="margin-left:270px">
                            <div class="card-box widget-inline">
                                <div class="col-md-6 " style="margin-left:70px">
                                    <div class="text-center p-3">
                                        <h2 class="mt-2"> <i class="fas fa-equals text-info mr-2"></i><b>46</b></h2>
                                        <p class="text-muted mb-0">
                                            Total Uploaded
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end row -->

                </div>
                <br />

                <div class="row">
                    <div class="offset-10">
                        
                        <a href="MakeQuestion">
                            <i class="fas fa-marker"></i>
                            <span> Make Question </span>
                        </a>
                    </div>
                    <br />
                    <br />
                    <div class="col-md-12">
                        <div class="card tqTable">
                            <div class="card-header">
                                <h5>TeacherQuestionHistory</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-area">
                                    <!-- table-responsive -->
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>teacherID</th>
                                                    <th>questionID</th>
                                                    <th>Review</th>

                                                </tr>
                                            </thead>

                                            <tbody>
                                                @for (int i = 0; i < quesList.Count; i++)
                                                {

                                                    for (int j = 0; j < teachersList.Count; j++)
                                                    {
                                                <tr>
                                                    <td>@teachersList[i].teacherID</td>
                                                    <td>@quesList[i].questionID</td>
                                                    <td>@quesList[i].review</td>

                                                </tr>
                                                    }

                                                }

                                            </tbody>



                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end container-fluid -->
                <!-- Footer Start -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                2021 &copy; shikkhanobish
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->
            </div>
            <!-- end content -->



    <!-- END wrapper -->
    <!-- Vendor js -->

</body>
</html>

@code{
    List<Question> quesList = new List<Question>();
    List<Teacher> teachersList = new List<Teacher>();
}


